<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post List</title>
    <style>
        table,th,td,tr{
            border:1px solid red;
        }
    </style>
</head>
<body>
    <h1>Post List</h1>
    <table>
        <tbody>
            <thead>
                <th>Title</th>
                <th>Content</th>
                <th>Profile</th>
                <th>Author</th>
                <th>Author Email</th>
            </thead>
        </tbody>
        <% for(var i=0;i<post.length;i++){%>
             <tr>
                 <td><a href="/posts/detail/<%= post[i]._id%>"><%= post[i].title %></a></td>
                 <td><%= post[i].content %></td>
                 <td><img src="<%= post[i].imgUrl%>" alt="" width="100" height="70"></td>
                 <td><%= post[i].author.name %></td>
                 <td><%= post[i].author.email %></td>
             </tr>
       <% }%>
    </table>
</body>
</html>