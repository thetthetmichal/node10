<script src="/javascripts/jquery.validate.min.js"></script>
<script>
    $("#email").blur(function(){
        var datap={email: $("#email").val()};
        if(datap.email !=''){
        $.ajax({
            url: "/users/emaildu",
            data: datap,
            type: "POST",
            success:function(result){
                if(result.status){
                    alert("Duplicate Email or Invalid");
                    $("#email").val("");
                    $("#email").focus();
                }
            }
        })
    }
    })
</script>

<script>
    $("#myForm").validate({
        rules:{
            uname:{
                required:true,
                minlength:5,
            },
            uemail:{
                required:true,
                emailExt:true,
            },
            pwd:{
                required:true,
                minlength:8,
                pwcheck:true,
            },
        },
        messages:{
            uname:{
                required:"Name field need to insert",
            },
             uemail:{
                 required:"Email field need  to insert",
             },
             pwd:{
                 required:"Password field need to insert",
                 pwcheck:"One uppercase, one digit and one lowercase",
             },
        }
    })
    $.validator.addMethod("pwcheck", function (value) {
      return (
        /^[A-Za-z0-9\d=!\-@._*]*$/.test(value) && // consists of only these
        /[a-z]/.test(value) && // has a lowercase letter
        /\d/.test(value)
      ); // has a digit
    });
    jQuery.validator.addMethod(
      "emailExt",
      function (value, element, param) {
        return value.match(
          /^[a-zA-Z0-9_\.%\+\-]+@[a-zA-Z0-9\.\-]+\.[a-zA-Z]{2,}$/
        );
      },
      "Your E-mail is wrong"
    );

</script>
